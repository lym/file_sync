!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:name=> "viewport", "content" => "width=device-width, initial-scale=1, shrink-to-fit=no"}
    %meta{:"http-equiv"=> "x-ua-compatible", "content" => "ie=edge"}
    %title FileSync
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header
      %nav{:class => "navbar navbar-expand-lg navbar-dark primary-color"}
        =link_to "FileSync", root_path, class: "navbar-brand"
        %button{class: "navbar-toggler",
          aria: {controls: "basicExampleNav", expanded: "false", label: "Toggle navigation"},
          data: {target: "#basicExampleNav", toggle: "collapse"}, type: "button"}
          %span{class: "navbar-toggler-icon"}


        %div{class: "collapse navbar-collapse", id: "basicExampleNav"}
          %ul{class: "navbar-nav ml-auto nav-flex-icons"}

            %li{class: "nav-item"}
              = link_to 'Upload', new_file_transfer_path, class: "nav-link"

            %li{class: "nav-item avatar dropdown"}
              %a{class: "nav-link dropdown-toggle", id: "navbarDropdownMenuLink-55",
                data: {toggle: "dropdown"},
                aria: {haspopup: "true", expanded: "false"}}
                =image_tag 'Madrid-dark-logo.png', class: "rounded-circle z-depth-0",
                  alt: "avatar image", size: '35x35'
              %div{class: "dropdown-menu dropdown-menu-right dropdown-secondary",
                aria: {labelledby: "navbarDropdownMenuLink-55"}}
                %a{class: "dropdown-item", href: "#"}Profile
                %a{class: "dropdown-item", href: "#"}Settings
                %a{class: "dropdown-item", href: "#"}Logout
    = yield
