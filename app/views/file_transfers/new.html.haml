%div{class: "row"}
  %div{class: "col-md-2"}
  %div{class: "col-md-10"}
    = form_for(:file_transfer, url: file_transfers_path, class: "form my-1") do |form|
      %div{class: "md-form"}
        %input{type: "hidden", name: "direction", value: "up"}
        %input{type: "text", name: "file_name", class: "form-control form-control-sm mr-sm-2 mb-0",
          placeholder: "File Name", aria: {label: "File Name"}}
        = form.file_field :files, multiple: true, direct_upload: true
        %button{type: "submit", class: "btn btn-primary btn-sm my-0"}
          Upload

